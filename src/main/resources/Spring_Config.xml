<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <bean id="app" class="test.spring.app.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="fileEventLogger"/>
    </bean>

    <bean id="client" class="test.spring.model.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Doe"/>
    </bean>

    <bean id="consoleEventLogger" class="test.spring.loggers.impl.ConsoleEventLogger"/>

    <bean id="event" class="test.spring.model.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean name="fileEventLogger" class="test.spring.loggers.impl.FileEventLogger">
        <constructor-arg value="src/main/resources/log.txt"/>
    </bean>

</beans>